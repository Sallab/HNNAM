<?php

$min=1;
$max=10;
$a=mt_rand(0,10);
$b=mt_rand(0,10);
$c=mt_rand(0,10);
$d=mt_rand(0,10);

$e=mt_rand(0,10);
$f=mt_rand(0,10);
$g=mt_rand(0,10);
$h=mt_rand(0,10);

$i=mt_rand(0,10);
$j=mt_rand(0,10);
$k=mt_rand(0,10);
$l=mt_rand(0,10);

$m=mt_rand($min,$max);
$n=mt_rand($min,$max);
$o=mt_rand($min,$max);
$p=mt_rand($min,$max);


$add = $a + $b;
$add2 = $c + $d;

$sub = $e - $f;
$sub2 = $g - $h;

$mul = $i * $j;
$mul2 = $k * $l;


$div = $m / $n;
$div2 = $o / $p;

echo "$a" . " + " . "_" . " = " . "$add";
echo "<br>";
echo "<br>";
echo "$c" . " + " . "_" . " = " . "$add2";
echo "<br>";
echo "<br>";

echo "$e" . " - " . "_" . " = " . "$sub";
echo "<br>";
echo "<br>";
echo "$g" . " - " . "_" . " = " . "$sub2";
echo "<br>";
echo "<br>";

echo "$i" . " x " . "_" . " = " . "$mul";
echo "<br>";
echo "<br>";
echo "$k" . " x " . "_" . " = " . "$mul2";
echo "<br>";
echo "<br>";

echo "$m" . " รท " . "_" . " = " . "$div";
echo "<br>";
echo "<br>";
echo "$o" . " รท " . "_" . " = " . "$div2";
echo "<br>";
echo "<br>";
?>

